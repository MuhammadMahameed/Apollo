@model IEnumerable<Apollo.Models.User>

@{
    ViewData["Title"] = "Users";
}

<head>
    <link href="~/Styles/users.css" rel="stylesheet" />
</head>

<h1 class="center title">Users</h1>

<div class="col-sm text-center">
    <div class="input-group input-group-lg center">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-lg">
                <i class="bi-search" role="img" aria-label="GitHub"></i>
            </span>
        </div>
        <input type="text" class="form-control" aria-label="Large" aria-describedby="inputGroup-sizing-sm" id="searchBox">
    </div>
</div>

<div class="justify-content-center">
    <p class="newRecord">
        <a asp-action="Create">ADD NEW USER</a>
    </p>
</div>

<div class="justify-content-center">
    <div class="col">
        <table class="table table-dark table-borderless table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmailAdress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RoleType)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAdress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleType)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="center" id="noData"></div>

@section Scripts {
    <script src="~/Scripts/users.js"></script>
}
