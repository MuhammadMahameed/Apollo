@model Apollo.Models.Biography

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link href="~/Styles/delete.css" rel="stylesheet" />
</head>

<div class="deleteTitle justify-content-center">
    <h3>Are you sure you want to delete this?</h3>
</div>

<div class="row justify-content-center">
    <div class="col">
        <table class="table table-dark table-borderless table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Artist)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EarlyLife)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Career)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Artistry)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PersonalLife)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfSongs)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfAlbums)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Artist.StageName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.EarlyLife)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Career)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Artistry)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.PersonalLife)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.NumberOfSongs)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.NumberOfAlbums)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="backToList justify-content-center">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>

