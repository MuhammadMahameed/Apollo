<head>
    <title>Search</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/Scripts/search_show_hide_logo_when_input.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg text-center">
                <h2 class=" text-info">SEARCH FOR YOUR FAVORITE ARTISTS, SONGS AND ALBUMS</h2>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm text-center">
                <div class="input-group input-group-lg">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-lg">
                            <i class="bi-search" role="img" aria-label="GitHub"></i>
                        </span>
                    </div>
                    <input type="text" class="form-control" aria-label="Large" aria-describedby="inputGroup-sizing-sm" id="searchBox">
                </div>
            </div>
            <div class="col-sm-3"></div>
        </div>
        <div class="row mt-lg-5">
            <div class="col-lg text-center">
                <img src=@Url.Content("~/Assets/Apollo.png") id="apolloIcon">
            </div>
        </div>
    </div>
</body>