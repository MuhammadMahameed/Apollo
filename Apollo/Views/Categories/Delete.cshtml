@model Apollo.Models.Category

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link href="~/Styles/delete.css" rel="stylesheet" />
</head>

<div class="deleteTitle justify-content-center">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h3>All songs and albums with this category will also be deleted!</h3>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col">
        <table class="table table-dark table-borderless table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="backToList justify-content-center">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>

