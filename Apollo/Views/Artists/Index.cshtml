@model IEnumerable<Apollo.Models.Artist>

@{
    ViewData["Title"] = "Artists";
}
<head>
    <link href="~/Styles/artists.css" rel="stylesheet" />
</head>

<h1 class="center title">Artists</h1>

<div class="col-sm text-center">
    <div class="input-group input-group-lg center">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-lg">
                <i class="bi-search" role="img" aria-label="GitHub"></i>
            </span>
        </div>
        <input type="text" class="form-control" aria-label="Large" aria-describedby="inputGroup-sizing-sm" id="searchBox">
    </div>
</div>

<div class="justify-content-center">
    <p class="newRecord">
        <a asp-action="Create">ADD NEW ARTIST</a>
    </p>
</div>

<div class="justify-content-center">
    <div class="col">
        <table class="table table-dark table-borderless table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StageName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Songs)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Albums)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Labels)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var songs = item.Songs.Select(x => x.Title + " ");
                    var albums = item.Albums.Select(x => x.Title + " ");
                    var labels = item.Labels.Select(x => x.Name + " ");
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StageName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Image)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => songs)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => albums)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => labels)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="center" id="noData"></div>

@section Scripts {
    <script src="~/Scripts/artists.js"></script>
}
