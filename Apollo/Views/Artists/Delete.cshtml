@model Apollo.Models.Artist

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link href="~/Styles/delete.css" rel="stylesheet" />
</head>

<div class="deleteTitle justify-content-center">
    <h3>Are you sure you want to delete this artist?</h3>
    <h3>All of his songs and albums will be deleted as well!</h3>
</div>

<div class="centerData">
    <div class="card" style="width: 20rem;">
        <img class="card-img-top" src=@Model.Image>
        <div class="card-body">
            <h1 class="card-title">@Html.DisplayFor(model => model.StageName)</h1>
            <h4><span class="detailsCategory">First Name:</span> @Html.DisplayFor(model => model.FirstName)</h4>
            <h4><span class="detailsCategory">Last Name:</span> @Html.DisplayFor(model => model.LastName)</h4>
            <h4><span class="detailsCategory">Age:</span> @Html.DisplayFor(model => model.Age)</h4>
            <div>
                <h3><span class="detailsCategory">Songs:</span></h3>
                @if (Model.Songs.Count > 0)
                {

                    @foreach (Song song in Model.Songs)
                    {
                        <div class="row">
                            <div class="col">
                                <h4 class="songName">@song.Title</h4>
                            </div>
                            <div class="col">
                                <h4>@song.Length</h4>
                            </div>
                        </div>
                    }

                }
                else
                {
                    <h4>No songs</h4>
                }
            </div>
            <div>
                <h3><span class="detailsCategory">Albums:</span></h3>
                @if (Model.Albums.Count > 0)
                {
                    @foreach (Album album in Model.Albums)
                    {
                        <div class="row">
                            <div class="col">
                                <h4 class="songName">@album.Title</h4>
                            </div>
                            <div class="col">
                                <h4>@album.ListenTime</h4>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <h4>No albums</h4>
                }
            </div>
            <div>
                <h3><span class="detailsCategory">Labels:</span></h3>
                @if (Model.Labels.Count > 0)
                {
                    @foreach (Label label in Model.Labels)
                    {
                        <div class="row">
                            <div class="col">
                                <h4 class="songName">@label.Name</h4>
                            </div>
                            <div class="col">
                                <h4>@label.Status</h4>
                            </div>
                        </div>
                    }

                }
                else
                {
                    <h4>No labels</h4>
                }
            </div>
        </div>
    </div>
</div>

<div class="backToList justify-content-center">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>

